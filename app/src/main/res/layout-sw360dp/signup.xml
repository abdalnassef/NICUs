<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="600dp"
    android:layout_marginTop="0dp">
    <LinearLayout
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <customfonts.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تسجيل مستخدم جديد"
            android:textColor="#4c565f"
            android:textSize="29dp"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            />


        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم  مركز الحضانة                               "
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"

            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:id="@+id/regName"


            android:inputType="text" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>
        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="عنوان الحضانة                                        "
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"
            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:id="@+id/regAddress"


            android:inputType="text" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>
        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="رقم الهاتف                                                  "
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:inputType="phone"
            android:padding="16dp"
            android:gravity="left"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="12dp"
            android:id="@+id/regPhone"/>


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>
        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="سعر الحضانة باليوم                                     "
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"
            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:id="@+id/regPrice"
            android:inputType="text" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>
        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="عدد سراير الحضانة                                      "
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"
            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:id="@+id/regCount"


            android:inputType="number" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>
        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="أخر التحديثات                                            "
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"
            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:id="@+id/regDate"


            android:inputType="text" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>

        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الخط الطولي                                              "
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"
            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:id="@+id/regLat"


            android:inputType="numberDecimal|numberSigned" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>


        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الخط العرضي                                   "
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"
            android:inputType="numberDecimal|numberSigned"
            android:drawableLeft="@drawable/pass"
            android:drawablePadding="12dp"
            android:id="@+id/regLng"


            />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>
        <customfonts.MyEditText

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="وصف الحضانة                                                "
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="16dp"
            android:inputType="text"
            android:drawableLeft="@drawable/pass"
            android:drawablePadding="12dp"
            android:id="@+id/regDes"


            />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>


        <customfonts.MyTextView

            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect1"
            android:text="Sign up"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="11dp"
            android:elevation="3dp"
            android:onClick="show"
            />




    </LinearLayout>

</ScrollView>









